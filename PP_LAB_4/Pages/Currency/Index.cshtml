@page
@model PP_LAB_4.Pages.Currency.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Kursy aktualnie dostępne w bazie</h1>

<p>
    <a asp-page="Create">Dodaj kurs ręcznie</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.currency[0].record_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.currency[0].name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.currency[0].exchange)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.currency)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.record_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.exchange)
                </td>

            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-page="Check">Sprawdź kurs!</a>
</div>