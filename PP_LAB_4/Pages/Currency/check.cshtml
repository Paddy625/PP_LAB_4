@model PP_LAB_4.Pages.Currency.checkModel

@{
    ViewData["Title"] = "check";
}

<h1>Sprawdź kurs danych</h1>

<h4>Kurs zostanie sprawdzony online w API i dodany do bazy danych</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="cur.record_date" class="control-label"></label>
                <input asp-for="cur.record_date" class="form-control" />
                <span asp-validation-for="cur.record_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cur.name" class="control-label"></label>
                <input asp-for="cur.name" class="form-control" />
                <span asp-validation-for="cur.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sprawdź kurs" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
